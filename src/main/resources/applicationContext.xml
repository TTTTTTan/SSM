<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<!-- 注解自动装配 -->
	<context:annotation-config />
	<bean id="AutowiredBean" class="com.tkl.spring.AutowiredBean" />

	<bean id="helloBean" class="com.tkl.spring.HelloWorld" >
		<property name="name" value="TKL" />
		<!-- 这是默认的模式，你需要通过 'ref' 属性来连接 bean -->
		<!-- <property name="user" ref="user" /> -->
	</bean>
	
	<!-- 按属性名称自动装配 -->
	<!-- <bean id="helloBean" class="com.tkl.spring.HelloWorld" autowire="byName"> -->
	<!-- 通过按属性的数据类型自动装配Bean -->
	<!-- <bean id="helloBean" class="com.tkl.spring.HelloWorld" autowire="byType"> -->
	<!-- 通过构造函数参数的数据类型按属性自动装配Bean -->
	<!-- <bean id="helloBean" class="com.tkl.spring.HelloWorld" autowire="constructor"> -->
	<bean id="user" class="com.tkl.entity.User">
		<property name="name" value="UserTkl" />
	</bean>

</beans>